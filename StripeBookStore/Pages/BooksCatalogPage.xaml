<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    x:Class="StripeBookStore.Pages.BooksCatalogPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:ffimageloading="clr-namespace:FFImageLoading.Forms;assembly=FFImageLoading.Forms"
    xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
    xmlns:rv="clr-namespace:Sharpnado.MaterialFrame;assembly=Sharpnado.MaterialFrame"
    x:Name="mainLayout"
    Title="{Binding PageTitle}"
    ios:Page.UseSafeArea="false"
    BackgroundColor="#F1F1F1">
    <ContentPage.Content>
        <CollectionView x:Name="booksCollectionsView" ItemsSource="{Binding BooksCatalog}">
            <CollectionView.ItemsLayout>
                <LinearItemsLayout Orientation="Vertical" />
            </CollectionView.ItemsLayout>
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid ColumnDefinitions="16, *, 16" RowDefinitions="16, *">
                        <rv:MaterialFrame
                            Grid.Row="1"
                            Grid.Column="1"
                            Margin="0,0,0,4"
                            BackgroundColor="WhiteSmoke"
                            CornerRadius="4"
                            Elevation="4"
                            HasShadow="True"
                            MaterialTheme="Light"
                            Visual="Material">
                            <Grid
                                ColumnDefinitions="92, 16, *, *"
                                ColumnSpacing="0"
                                RowDefinitions="22, 18, 48, 32"
                                RowSpacing="4">
                                <ffimageloading:CachedImage
                                    Grid.Row="0"
                                    Grid.RowSpan="4"
                                    Grid.Column="0"
                                    Aspect="Fill"
                                    DownsampleToViewSize="true"
                                    Source="{Binding ImageUri}" />
                                <Label
                                    Grid.Row="0"
                                    Grid.Column="2"
                                    Grid.ColumnSpan="2"
                                    FontSize="16"
                                    Text="{Binding Name}" />
                                <Label
                                    Grid.Row="1"
                                    Grid.Column="2"
                                    Grid.ColumnSpan="2"
                                    FontSize="12"
                                    Text="{Binding Genre}" />
                                <Label
                                    Grid.Row="2"
                                    Grid.Column="2"
                                    Grid.ColumnSpan="2"
                                    FontSize="Caption"
                                    LineBreakMode="TailTruncation"
                                    MaxLines="2"
                                    Text="{Binding Description}" />
                                <Label
                                    Grid.Row="3"
                                    Grid.Column="2"
                                    Text="{Binding Price, Converter={StaticResource LongToCurrencyConverter}}"
                                    VerticalTextAlignment="Center" />
                                <Button
                                    Grid.Row="3"
                                    Grid.Column="3"
                                    Padding="0"
                                    BackgroundColor="Teal"
                                    Command="{Binding Path=BindingContext.OnBuyItemCommand, Source={x:Reference mainLayout}}"
                                    CommandParameter="{Binding .}"
                                    FontSize="12"
                                    HorizontalOptions="FillAndExpand"
                                    Text="BUY"
                                    TextColor="White"
                                    VerticalOptions="Center"
                                    Visual="Material" />
                            </Grid>
                        </rv:MaterialFrame>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </ContentPage.Content>
</ContentPage>
